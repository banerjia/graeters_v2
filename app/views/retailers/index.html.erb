    <tbody>
        <% @recently_commented_retailers.each do |retailer|  %>
            <tr>
                <th scope="row"><%= link_to retailer.name, retailer_path(retailer.url) -%></th>
                <td><%= retailer.latest_comment_date %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<% end %>