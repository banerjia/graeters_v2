<% if @retailers_with_new_stores.any? %>
<table class="table">
    <caption class="h2">Retailers with New Stores</caption>
    <thead>
        <tr>
            <th scope="col">Retailers</th>
            <th scope="col">Number of New Stores</th>
        </tr>
    </thead>
    <tbody>
        <% @retailers_with_new_stores.each do |retailer|  %>
            <tr>
                <th scope="row"><%= link_to retailer.name, retailer_path(retailer.url) -%></th>
                <td><%= retailer.latest_store_add_date %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<% end %>

<table class="table">
    <caption class="h2">All Retailers</caption>
    <thead>
        <tr>
            <th scope="col">Retailers</th>
            <th scope="col">Number of Stores</th>
        </tr>
    </thead>
    <tbody>
        <% @all_retailers.each do |retailer|  %>
            <tr>
                <th scope="row"><%= link_to retailer.name, retailer_path(retailer.url) -%></th>
                <td><%= retailer.stores.size -%></td>
            </tr>
        <% end %>
    </tbody>
</table>

